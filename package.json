{
  "name": "@cht/next-versions",
  "version": "0.1.0",
  "description": "Automated deployment of multiple Next.js app versions to Google Cloud Run",
  "type": "module",
  "engines": {
    "node": ">=14.16"
  },
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./cli": "./src/cli/deploy.js"
  },
  "files": [
    "src",
    "templates"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "nextjs",
    "google-cloud",
    "deployment"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "winston": "^3.17.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.0.0"
  },
  "peerDependencies": {
    "next": ">=13.0.0"
  }
}
